parameters:
    level: 9
    treatPhpDocTypesAsCertain: false
    paths:
        - src
        - tests
    banned_code:
        nodes:
            # enable detection of echo
            -
                type: Stmt_Echo
                functions: null

            # enable detection of eval
            -
                type: Expr_Eval
                functions: null

            # enable detection of die/exit
            -
                type: Expr_Exit
                functions: null

            # enable detection of a set of functions
            -
                type: Expr_FuncCall
                functions:
                	- dd
                	- debug_backtrace
                	- dump
                	- exec
                	- passthru
                	- phpinfo
                	- print_r
                	- proc_open
                	- shell_exec
                	- system
                	- var_dump*
                	- empty
                	- isset


            # enable detection of print statements
            -
                type: Expr_Print
                functions: null


            # enable detection of shell execution by backticks
            -
                type: Expr_ShellExec
                functions: null